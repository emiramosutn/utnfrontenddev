<div class="seccion-modificar-novedad seccion-oscura">
    <h4>MODIFICAR - SECCION DE ADMINISTRADORES</h4>
    <div class="row">
        <div class="col-12">
            <h4>Modificar la novedad</h4>
            <form method="post" action="/admin/novedades/modificar" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">

                <div class="form-group">
                    <input type="text" placeholder="titulo" value="{{novedad.titulo}}" class="form-control"
                        name="titulo">
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Subtitulo"
                        name="subtitulo">{{novedad.subtitulo}}</textarea>
                </div>

                <div class="form-group">
                    <textarea class="form-control" placeholder="Cuerpo" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="formFile" class="form-label">Carga de imagen</label>
                    <input class="form-control" type="file" id="formFile" name="imagen">
                </div>

                <div class="form-group">
                    <p>
                        <label><input type="checkbox" name="img_delete" value="1"> Eliminar imagen actual</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>

            {{#if error}}
            <h5>{{message}}</h5>
            {{/if}}
        </div>
    </div>
</div>
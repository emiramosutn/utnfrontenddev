<div>
    <div class="titulos-novedades seccion-clara">
        <h2>Bienvenido/a {{ usuario }} <a href="/admin/login/logout" class="btn btn-sm btn-danger">Cerrar sesion <i
                    class="fa fa-sign-out"></i></a></h2>
        <p>Estás en la sección de administradores</p>
    </div>
    <div class="row">
        <div class="">
            <h2 class="lista-novedades">Listado de novedades</h2>
        </div>
        <div class="col-11 text-right">
            <a href="/admin/novedades/agregar" class="btn btn-success">
            <i class="fa fa-plus">Nuevo</i></a>
        </div>
        <div class="col-5 text-right">
        </div>
        <div class="row">
            <div class="col">
                <table class="table table-center">
                    <thea>
                        <tr class="table seccion-oscura">
                            <th scope="col">#</th>
                            <th scope="col">TITULO</th>
                            <th scope="col">Imagen</th>
                            <th scope="col" class="text-right">Acciones</th>
                        </tr>

                        </thead>
                        <tbody>
                            {{#each novedades}}
                            <tr>
                                <th scope="row">{{id}}</th>
                                <th>{{titulo}}</th>
                                <th>{{{imagen}}}</th>
                                <th class="btn-right">
                                    <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                        <i class="bi bi-pencil"></i>
                                    <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                                        <i class="bi bi-trash"></i> </a>
                                </th>

                            </tr>
                            {{/each}}
                        </tbody>

                </table>
            </div>

        </div>
    </div>
</div>